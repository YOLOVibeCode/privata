{
  "name": "privata-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "GDPR/HIPAA compliance library for healthcare applications",
  "author": "Privata Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/privata/privata.git"
  },
  "workspaces": [
    "packages/*",
    "packages/adapters/*",
    "packages/extensions/*",
    "packages/infrastructure/*",
    "examples/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:core": "lerna run build --scope=privata",
    "build:adapters": "lerna run build --scope=@privata/*-compat",
    "test": "lerna run test",
    "test:unit": "lerna run test:unit",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "test:coverage": "lerna run test:coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "clean": "lerna run clean && rm -rf node_modules",
    "docs:generate": "typedoc --out docs/api packages/core/src/index.ts",
    "docs:serve": "npm run docs:generate && http-server docs/api",
    "create-package": "node scripts/create-package.js",
    "publish": "lerna publish",
    "version": "lerna version",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "lerna": "^8.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

