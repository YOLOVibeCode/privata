{
  "name": "@privata/testing",
  "version": "1.0.0",
  "description": "Automated testing and validation suite for Privata",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "testing",
    "validation",
    "compliance",
    "gdpr",
    "hipaa",
    "automation",
    "ci-cd"
  ],
  "author": "Privata Team",
  "license": "MIT",
  "dependencies": {
    "@privata/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/privata/privata.git",
    "directory": "packages/testing"
  },
  "bugs": {
    "url": "https://github.com/privata/privata/issues"
  },
  "homepage": "https://github.com/privata/privata#readme"
