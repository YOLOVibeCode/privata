{
  "name": "@privata/core",
  "version": "1.0.0",
  "description": "Core Privata library for GDPR/HIPAA compliance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=end-to-end-demonstration",
    "demo": "npx ts-node scripts/demonstration.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "stress:server": "npx ts-node tests/stress/test-server.ts",
    "stress:level1": "k6 run tests/stress/level1-baseline.js",
    "stress:test": "npm run stress:server & sleep 3 && npm run stress:level1 && kill %1"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.1.1",
    "@types/mongodb": "^4.0.6",
    "@types/pg": "^8.15.5",
    "@types/redis": "^4.0.10",
    "crypto": "^1.0.1",
    "mongodb": "^6.20.0",
    "pg": "^8.16.3",
    "redis": "^5.8.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "gdpr",
    "hipaa",
    "compliance",
    "privacy",
    "data-separation",
    "pseudonymization"
  ],
  "author": "Privata Team",
  "license": "MIT"
}
